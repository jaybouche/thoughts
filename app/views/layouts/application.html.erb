<!DOCTYPE html>
<html>
  <head>
    <title>Thoughts</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
    
  <body>
    <header class="row">
      <br class="clear" />
      <div class="col-1">
       <link href='http://fonts.googleapis.com/css?family=Roboto:100' rel='stylesheet' type='text/css'>
        <h1>Thoughts</h1>
      <br class="clear" />
      
       <div id="parrot">
       <div id="header">
       <div id="peakt"></div>
       <div id="face"></div>  
       <div id="eye"></div>
       <div id="peakf"></div>
       </div>
 
       <div id="body">
       <div id="wing1"></div>
       <div id="wing2"></div>
       <div id="wing3"></div>
       <div id="shadowing"></div>
       </div>
 
       <div id="foot"></div>
       <div id="tail"></div>
       </div>
      </div>
  <br class="clear" />    
      <div class="col-12 links">
                <!-- Button trigger modal -->
        <%= link_to 'Contribute', '#', data: {toggle: 'modal', target: '#myModal'} %>
      </div>  
 
    </header>  

    <!-- Modal -->
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
      <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">Ã—</span>
        </button>
      <h4 class="modal-title" id="myModalLabel">Contribute Your Thoughts</h4>
      </div>
    
      <%= simple_form_for Thought.new do |f| %>
      <div class="modal-body">      
        <%= f.input :message %>
        <%= f.input :author %>
      </div>
      
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit 'Create', class: 'btn btn-danger' %>
      </div>
        <% end %>
      </div>
      </div>
      </div>
<br class="clear" />
<hr />

    <div class="container">
        <% if flash[:error].present? %>
    <div class="col-10 offset-1 alert alert-danger">
        <%= flash[:error].html_safe %>
    </div>
        <% end %>
  <%= yield %>
    </div>
   
  </body>
</html>
